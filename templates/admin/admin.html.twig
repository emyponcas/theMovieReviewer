{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">

        <h1 class="mb-4 text-center">Panel de Administración</h1>

        <div class="row g-4">

            <div class="col-md-4">
                <a href="{{ path('app_category_index') }}" class="admin-card text-decoration-none">
                    <div class="p-4">
                        <h4>Categorías</h4>
                        <p class="text-muted">Ver y gestionar categorías</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('app_category_new') }}" class="admin-card text-decoration-none">
                    <div class="p-4">
                        <h4>Crear categoría</h4>
                        <p class="text-muted">Crear una nueva categoría</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('data_load') }}" class="admin-card text-decoration-none">
                    <div class="p-4">
                        <h4>Cargar películas</h4>
                        <p class="text-muted">Importar películas desde TMDB</p>
                    </div>
                </a>
            </div>

        </div>

    </div>

    <style>

        .admin-card {

            display: block;
            background: linear-gradient(135deg, #1f1f2e, #2b2b40);
            color: white;
            border-radius: 12px;
            transition: all 0.25s ease;

        }

        .admin-card:hover {

            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.4);

        }

    </style>

{% endblock %}
