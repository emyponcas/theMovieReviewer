{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">

        <h1 class="admin-title mb-4">
            Panel de Administración
        </h1>

        <div class="row g-4">

            <div class="col-md-4">
                <a href="{{ path('app_category_index') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-layer-group"></i>
                        </div>

                        <h4>Categorías</h4>

                        <p>Gestionar categorías</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('app_category_new') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>

                        <h4>Crear categoría</h4>

                        <p>Nueva categoría</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('data_load') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-download"></i>
                        </div>

                        <h4>Cargar películas</h4>

                        <p>Importar desde TMDB</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('admin_movie_new') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-film"></i>
                        </div>

                        <h4>Nueva película</h4>

                        <p>Crear manualmente</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('admin_users') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-users"></i>
                        </div>

                        <h4>Usuarios</h4>

                        <p>Ver usuarios registrados</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('admin_stats') }}" class="admin-card">
                    <div>
                        <div class="admin-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>

                        <h4>Estadísticas</h4>

                        <p>Datos globales</p>
                    </div>
                </a>
            </div>

        </div>

    </div>

    <style>

        .admin-title{
            font-weight:800;
            font-size:2.4rem;
        }

        .admin-card{
            display:block;
            background:var(--bg-card);
            border-radius:16px;
            padding:30px;
            text-decoration:none;
            color:white;
            border:1px solid var(--border-color);
            transition:all .2s;
        }

        .admin-card:hover{
            transform:translateY(-6px);
            box-shadow:0 20px 40px rgba(0,0,0,.5);
        }

        .admin-icon{
            font-size:28px;
            margin-bottom:10px;
            color:var(--accent);
        }

        .admin-card h4{
            font-weight:700;
        }

        .admin-card p{
            color:var(--text-secondary);
            margin:0;
        }

    </style>

{% endblock %}