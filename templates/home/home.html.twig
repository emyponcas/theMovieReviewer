{% extends 'base.html.twig' %}

{% block title %}Películas Populares{% endblock %}

{% block stylesheets %}
    <style>

        .page-header{
            margin-bottom: 32px;
        }

        .page-title{
            font-weight: 800;
            font-size: 2.4rem;
            letter-spacing: -0.5px;
        }

        .page-subtitle{
            color: var(--text-secondary);
            margin-top: 6px;
        }

        .stats-card{
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 14px;
            padding: 18px;
            text-align: center;
        }

        .stats-number{
            font-size: 1.8rem;
            font-weight: 700;
        }

        .movie-card{
            background: var(--bg-card);
            border-radius: 14px;
            overflow: hidden;
            border: 1px solid var(--border-color);
            transition: transform 0.18s ease, box-shadow 0.18s ease;
            height: 100%;
        }

        .movie-card:hover{
            transform: translateY(-6px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.35);
        }

        .poster-container{
            position: relative;
        }

        .poster{
            width: 100%;
            height: 420px;
            object-fit: cover;
        }

        .no-poster{
            height: 420px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--bg-secondary);
            color: var(--text-secondary);
        }

        .movie-body{
            padding: 14px;
        }

        .movie-title{
            font-weight: 700;
            font-size: 1.05rem;
            margin-bottom: 6px;
        }

        .movie-meta{
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .movie-rating{
            color: var(--accent);
            font-weight: 600;
        }

        .movie-actions{
            display: flex;
            justify-content: space-between;
            margin-top: 12px;
        }

        .btn-movie{
            border-radius: 8px;
            padding: 4px 10px;
            font-size: 0.85rem;
        }

    </style>
{% endblock %}

{% block body %}

    <div class="page-header">

        <div class="page-title">
            Películas Populares
        </div>

        <div class="page-subtitle">
            Descubre y valora películas de la base de datos
        </div>

    </div>

    <div class="row g-3 mb-4">

        <div class="col-md-4 col-6">
            <div class="stats-card">
                <div class="stats-number">
                    {{ movies|length }}
                </div>
                <div class="text-secondary">
                    Películas
                </div>
            </div>
        </div>

        <div class="col-md-4 col-6">
            <div class="stats-card">
                <div class="stats-number">
                    {{ "now"|date("Y") }}
                </div>
                <div class="text-secondary">
                    Año actual
                </div>
            </div>
        </div>

        <div class="col-md-4 col-6">
            <div class="stats-card">
                <div class="stats-number">
                    {% if movies|length > 0 %}
                        OK
                    {% else %}
                        Vacía
                    {% endif %}
                </div>
                <div class="text-secondary">
                    Base de datos
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4">

        {% if movies is empty %}

            <div class="col-12">

                <div class="stats-card">

                    No hay películas disponibles

                </div>

            </div>

        {% endif %}

        {% for movie in movies %}

            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">

                <div class="movie-card">

                    <div class="poster-container">

                        {% if movie.posterUrl %}

                            <img
                                    src="https://image.tmdb.org/t/p/w500{{ movie.posterUrl }}"
                                    class="poster"
                                    alt="{{ movie.title }}"
                            >

                        {% else %}

                            <div class="no-poster">

                                Sin póster

                            </div>

                        {% endif %}

                    </div>

                    <div class="movie-body">

                        <div class="movie-title">
                            {{ movie.title }}
                        </div>

                        <div class="movie-meta">

                            {% if movie.releaseDate %}
                                {{ movie.releaseDate|date('Y') }}
                            {% endif %}

                        </div>

                        <div class="movie-rating">

                            <i class="fas fa-star"></i>

                            {% if movie.voteAverage %}
                                {{ movie.voteAverage|number_format(1) }}
                            {% else %}
                                N/A
                            {% endif %}

                        </div>

                        <div class="movie-actions">

                            <a href="{{ path('app_movie_show', { id: movie.id }) }}"
                               class="btn btn-outline-light btn-sm btn-movie">

                                Detalles

                            </a>

                            {% if app.user %}

                                <a href="{{ path('app_movie_show', { id: movie.id }) }}"
                                   class="btn btn-outline-warning btn-sm btn-movie">

                                    Valorar

                                </a>

                            {% else %}

                                <a href="{{ path('app_login') }}"
                                   class="btn btn-outline-warning btn-sm btn-movie">

                                    Login

                                </a>

                            {% endif %}

                        </div>

                    </div>

                </div>

            </div>

        {% endfor %}

    </div>

{% endblock %}
