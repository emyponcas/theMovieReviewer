{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">

        <a href="{{ path('app_category_index') }}" class="btn btn-secondary mb-3">
            ← Volver
        </a>

        <h1 class="mb-3">{{ category.name }}</h1>

        <p class="text-muted">
            {{ category.description ?: 'Sin descripción' }}
        </p>

        <hr>

        <h3 class="mt-4 mb-3">Películas de la categoría</h3>

        <div class="row">
            {% for movie in category.movies %}
                <div class="col-md-3 mb-4">
                    <div class="movie-card">
                        <img src="{{ movie.getPosterUrl() }}"
                             class="img-fluid rounded">

                        <div class="movie-title">
                            {{ movie.title }}
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No hay películas en esta categoría.</p>
            {% endfor %}
        </div>

    </div>

    <style>
        .movie-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }

        .movie-card:hover {
            transform: scale(1.05);
        }

        .movie-title {
            text-align: center;
            margin-top: 8px;
            font-weight: 500;
        }
    </style>

{% endblock %}
