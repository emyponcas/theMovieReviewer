{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>

        .page-title{
            font-size:2.2rem;
            font-weight:800;
            margin-bottom:10px;
        }

        .category-card{

            background:var(--bg-card);
            border:1px solid var(--border-color);
            border-radius:14px;
            padding:18px;
            transition:.2s;
            height:100%;

        }

        .category-card.inactive{

            opacity:.5;
            border-color:#dc3545;

        }

        .category-card:hover{

            transform:translateY(-5px);
            box-shadow:0 12px 28px rgba(0,0,0,.35);

        }

        .category-name{

            font-weight:700;
            font-size:1.1rem;
            margin-bottom:6px;

        }

        .category-description{

            color:var(--text-secondary);
            font-size:.9rem;

        }

        .category-status{

            font-size:.8rem;
            margin-top:6px;

        }

        .category-actions{

            margin-top:14px;
            display:flex;
            gap:8px;

        }

    </style>
{% endblock %}


{% block body %}

    <div class="container mt-4">

        <div class="page-title">
            Administrar categorías
        </div>

        <a href="{{ path('app_category_new') }}"
           class="btn btn-accent mb-4">

            Nueva categoría

        </a>


        <div class="row g-4">

            {% for category in categories %}

                <div class="col-md-4">

                    <div class="category-card {{ category.isActive ? '' : 'inactive' }}">

                        <div class="category-name">
                            {{ category.name }}
                        </div>

                        <div class="category-description">
                            {{ category.description }}
                        </div>

                        <div class="category-status">

                            {% if category.isActive %}

                                <span class="badge bg-success">
Activa
</span>

                            {% else %}

                                <span class="badge bg-danger">
Eliminada
</span>

                            {% endif %}

                        </div>


                        <div class="category-actions">

                            {% if category.isActive %}

                                <a href="{{ path('app_category_edit',{id:category.id}) }}"
                                   class="btn btn-outline-warning btn-sm">
                                    Editar
                                </a>

                                <form method="post"
                                      action="{{ path('app_category_delete',{id:category.id}) }}">

                                    <button class="btn btn-outline-danger btn-sm">
                                        Eliminar
                                    </button>

                                </form>

                            {% else %}

                                <form method="post"
                                      action="{{ path('app_category_restore',{id:category.id}) }}">

                                    <button class="btn btn-outline-success btn-sm">
                                        Restaurar
                                    </button>

                                </form>

                            {% endif %}

                        </div>

                    </div>

                </div>

            {% endfor %}

        </div>

    </div>

{% endblock %}