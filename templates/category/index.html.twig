{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Categorías</h1>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                Nueva categoría
            </a>
        </div>

        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-4">
                    <a href="{{ path('app_category_show', {id: category.id}) }}" class="text-decoration-none">
                        <div class="category-card p-4">
                            <h4>{{ category.name }}</h4>
                            <p class="text-muted">
                                {{ category.description ?: 'Sin descripción' }}
                            </p>
                            <div class="mt-3">
                            <span class="badge bg-info">
                                {{ category.movies|length }} películas
                            </span>
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <p>No hay categorías creadas.</p>
            {% endfor %}
        </div>
    </div>

    <style>
        .category-card {
            background: linear-gradient(135deg, #1f1f2e, #2b2b40);
            color: white;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.4);
        }
    </style>

{% endblock %}
