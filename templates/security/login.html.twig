{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    <style>

        .auth-wrapper{
            max-width:460px;
            margin:40px auto;
        }

        .auth-title{
            font-size:2rem;
            font-weight:800;
            margin-bottom:6px;
        }

        .auth-subtitle{
            color:var(--text-secondary);
            margin-bottom:24px;
        }

        .auth-input{
            background:var(--bg-secondary);
            border:1px solid var(--border-color);
            color:var(--text-main);
            border-radius:10px;
            padding:10px 12px;
            width:100%;
        }

        .auth-input:focus{
            background:var(--bg-secondary);
            border-color:var(--accent);
            color:var(--text-main);
            outline:none;
        }

        .auth-button{
            margin-top:14px;
            background:var(--accent);
            color:black;
            border:none;
            border-radius:10px;
            padding:10px;
            font-weight:600;
            width:100%;
        }

        .auth-button:hover{
            background:var(--accent-hover);
        }

        .auth-link{
            margin-top:18px;
            text-align:center;
            color:var(--text-secondary);
        }

        .auth-link a{
            color:var(--accent);
            text-decoration:none;
            font-weight:500;
        }

        .auth-link a:hover{
            text-decoration:underline;
        }

    </style>
{% endblock %}

{% block body %}

    <div class="auth-wrapper">

        <div class="auth-title">
            Iniciar sesión
        </div>

        <div class="auth-subtitle">
            Accede a tu cuenta
        </div>

        <form method="post">

            {% if error %}
                <div class="alert alert-danger mb-3">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <input
                    type="email"
                    name="email"
                    value="{{ last_username }}"
                    class="auth-input mb-3"
                    placeholder="Email"
                    required
                    autofocus
            >

            <input
                    type="password"
                    name="password"
                    class="auth-input mb-3"
                    placeholder="Password"
                    required
            >

            <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
            >

            <button class="auth-button">
                Entrar
            </button>

        </form>

        <div class="auth-link">

            ¿No tienes cuenta?

            <a href="{{ path('app_register') }}">
                Crear cuenta
            </a>

        </div>

    </div>

{% endblock %}
