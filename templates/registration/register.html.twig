{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block stylesheets %}
    <style>

        .auth-wrapper{
            max-width:460px;
            margin:40px auto;
        }

        .auth-title{
            font-size:2rem;
            font-weight:800;
            margin-bottom:6px;
        }

        .auth-subtitle{
            color:var(--text-secondary);
            margin-bottom:24px;
        }

        .auth-input{
            background:var(--bg-secondary);
            border:1px solid var(--border-color);
            color:var(--text-main);
            border-radius:10px;
            padding:10px 12px;
            width:100%;
        }

        .auth-input:focus{
            background:var(--bg-secondary);
            border-color:var(--accent);
            color:var(--text-main);
            outline:none;
        }

        .auth-button{
            margin-top:14px;
            background:var(--accent);
            color:black;
            border:none;
            border-radius:10px;
            padding:10px;
            font-weight:600;
            width:100%;
        }

        .auth-button:hover{
            background:var(--accent-hover);
        }

        .auth-link{
            margin-top:18px;
            text-align:center;
            color:var(--text-secondary);
        }

        .auth-link a{
            color:var(--accent);
            text-decoration:none;
            font-weight:500;
        }

        .auth-link a:hover{
            text-decoration:underline;
        }

    </style>
{% endblock %}

{% block body %}

    <div class="auth-wrapper">

        <div class="auth-title">
            Crear cuenta
        </div>

        <div class="auth-subtitle">
            Regístrate para poder valorar películas
        </div>

        {{ form_start(registrationForm) }}

        {{ form_widget(registrationForm.email, {
            attr: {
                class: 'auth-input mb-3',
                placeholder: 'Email'
            }
        }) }}

        {{ form_widget(registrationForm.plainPassword, {
            attr: {
                class: 'auth-input mb-3',
                placeholder: 'Password'
            }
        }) }}

        <button class="auth-button">
            Crear cuenta
        </button>

        {{ form_end(registrationForm) }}

        <div class="auth-link">

            ¿Ya tienes cuenta?

            <a href="{{ path('app_login') }}">
                Iniciar sesión
            </a>

        </div>

    </div>

{% endblock %}
